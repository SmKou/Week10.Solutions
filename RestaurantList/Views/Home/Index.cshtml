@{
    Layout = "_Layout";
}

@using RestaurantList.Models;

<header>
    <h1>Restaurants By Cuisine</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Add Cuisine", "Create", "Cuisines")</li>
    </ul>
</header>
<main>
    @if (@Model.Count == 0)
    {
        <p>No cuisines have been added yet.</p>
    }

    <ul>
        @foreach (Cuisine cuisine in Model)
        {
            <li>@Html.ActionLink($"{cuisine.Name}", "Details", "Cuisines", new { id = cuisine.CuisineId })</li>
        }
    <ul>
</main>
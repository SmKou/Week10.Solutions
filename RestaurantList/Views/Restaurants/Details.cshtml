@{
    Layout = "_Layout";
}

@using RestaurantList.Models
@model RestaurantList.Models.Restaurant

<header>
    <h1>View Restaurant: @Html.DisplayFor(model => model.Name)</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Cuisines", "Index", "Home")</li>
        <li>@Html.ActionLink("Edit", "Edit", new { id = Model.RestaurantId })</li>
        <li>@Html.ActionLink("Delete", "Delete", new { id = Model.RestaurantId })</li>
        <li>@Html.ActionLink("Add Review", "Create", "Reviews", new { id = Model.RestaurantId })</li>
    </ul>
</header>
<main>
    <h3>Reviews</h3>
    @if (@Model.Reviews.Count == 0)
    {
        <p>No reviews have been added for this restaurant yet.</p>
    }

    <ul>
        @foreach (Review review in Model.Reviews)
        {
            <li>@Html.ActionLink($"{review.Summary}", "Details", "Reviews", new { id = review.ReviewId })</li>
        }
    </ul>
</main>
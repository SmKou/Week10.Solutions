@{
    Layout = "_Layout";
}

@model RestaurantList.Models.Restaurant

<header>
    <h1>Add Restaurant</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Cuisines", "Index", "Home")</li>
        <li>@Html.ActionLink("Add Cuisine", "Create")</li>
        <li>@Html.ActionLink("Restaurants", "Details", "Cuisines", new { id = ViewBag.CuisineId })</li>
    </ul>
</header>
<main>
    @using (Html.BeginForm())
    {
        @Html.Hidden("CuisineId", (int) ViewBag.CuisineId)

        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)

        <input type="submit" value="Add Restaurant">
    }
</main>
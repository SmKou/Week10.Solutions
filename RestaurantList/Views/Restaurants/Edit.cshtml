@{
    Layout = "_Layout";
}

@model RestaurantList.Models.Restaurant

<header>
    <h1>Edit Restaurant: @Html.DisplayFor(model => model.Name)</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Cuisines", "Index", "Home")</li>
        <li>@Html.ActionLink("Restaurants", "Details", "Cuisines", new { id = Model.CuisineId })</li>
        <li>@Html.ActionLink("View", "Details", "Restaurants", new { id = Model.RestaurantId })</li>
        <li>@Html.ActionLink("Delete", "Delete", new { id = Model.RestaurantId })</li>
        <li>@Html.ActionLink("Add Review", "Create", "Reviews", new { id = Model.RestaurantId })</li>
    </ul>
</header>
<main>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.RestaurantId)

        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.Cuisine)
        @Html.DropDownList("CuisineId")

        <input type="submit" value="Save">
    }
</main>
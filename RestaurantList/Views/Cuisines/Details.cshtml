@{
    Layout = "_Layout";
}

@using RestaurantList.Models
@model RestaurantList.Models.Cuisine

<header>
    <h1>View Cuisine: @Html.DisplayFor(model => model.Name)</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Cuisines", "Index", "Home")</li>
        <li>@Html.ActionLink("Add Cuisine", "Create")</li>
        <li>@Html.ActionLink("Edit", "Edit", new { id = Model.CuisineId })</li>
        <li>@Html.ActionLink("Delete", "Delete", new { id = Model.CuisineId })</li>
        <li>@Html.ActionLink("Add Restaurant", "Create", "Restaurants", new { id = Model.CuisineId })</li>
    </ul>
</header>
<main>
    <h3>Restaurants</h3>
    @if (@Model.Restaurants.Count == 0)
    {
        <p>No restaurants have been added to this cuisine yet.</p>
    }

    <ul>
        @foreach (Restaurant restaurant in Model.Restaurants)
        {
            <li>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurants", new { id = restaurant.RestaurantId })</li>
        }
    </ul>
</main>